{
  "name": "marked-input",
  "private": true,
  "version": "3.0.1",
  "description": "React component for combine editable text with any component using annotated text",
  "license": "MIT",
  "author": "Ruslan Ilyin",
  "scripts": {
    "app": "vite tests/e2e/app -c vite.config.ts --open",
    "build": "vite build && tsc && node prepack.js",
    "storybook": "npm run start -w storybook",
    "build-storybook": "npm run build -w storybook",
    "test": "npm run test -w tests",
    "test:ui": "npm run test:ui -w tests",
    "test:watch": "npm run test:watch -w tests",
    "test:integration": "npm run test:integration -w tests",
    "coverage": "npm run coverage -w tests"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "vite": "^5.0.2",
    "vite-plugin-css-injected-by-js": "^3.3.0"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "^7.38.3",
    "@types/react": "^18.2.38",
    "@vitejs/plugin-react-swc": "^3.5.0",
    "typescript": "^5.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Nowely/marked-input.git"
  },
  "type": "module",
  "types": "./index.d.ts",
  "module": "./index.js",
  "main": "./index.umd.cjs",
  "exports": {
    ".": {
      "import": "./index.js",
      "require": "./index.umd.cjs"
    }
  },
  "keywords": [
    "react",
    "react-component",
    "component",
    "mention",
    "markup",
    "marked-input",
    "highlight",
    "input"
  ],
  "workspaces": [
    "lib",
    "storybook",
    "tests"
  ]
}
