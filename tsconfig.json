{
  "compilerOptions": {
    "target": "es2016",
    "moduleResolution": "node",
    "jsx": "preserve",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationDir": "dist/types",
    "declarationMap": true,
    "outDir": "dist"
  },
  "include": ["lib/**/*"],
}
